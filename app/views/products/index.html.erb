  <h2> Add New Product ? </h2>

  <%= link_to "Click here to Add New Product" , {:action => "new", :controller => "products"} %>
  <br><br>

  <h2>The Available Products are: </h2>
  <% @product_name.each do |item| %>
  <ul>
    <li>
      <a href="/products/<%=item%>"><%= item %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
      <%= link_to '..Edit..', edit_product_path(item) %>
      
      <%= link_to "..Delete..", product_path(item), :confirm => "Are you sure?", :method => :delete %>
    </li>
  </ul>
  <% end %>